{
  "name": "pulpo",
  "version": "1.4.2",
  "description": "Configuration mechanism",
  "author": "Patrick Camacho <patrick.camacho@docker.com>",
  "license": "Apache-2.0",
  "keywords": [
    "configuration",
    "config",
    "env",
    "configurator",
    "docker",
    "schema",
    "setup",
    "cast",
    "validate"
  ],
  "main": "lib/index.js",
  "typings": "lib/index",
  "files": [
    "lib/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/docker/pulpo.git"
  },
  "scripts": {
    "build": "tsc",
    "deps": "next-update --tldr --keep",
    "lint": "tslint './src/**/*.ts'",
    "prepublish": "npm run -s lint && npm run -s test && npm run -s build",
    "start": "npm run -s test -- --watch --coverage",
    "test": "jest"
  },
  "devDependencies": {
    "jest": "18.1.0",
    "next-update": "1.5.0",
    "tslint": "^4.4.0",
    "typescript": "^2.1.4"
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "/test/.*\\.spec\\.(ts|tsx)$"
  },
  "dependencies": {
    "dotty": "0.0.2",
    "minimist": "1.2.0",
    "typecast": "0.0.1"
  }
}
